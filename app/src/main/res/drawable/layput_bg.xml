<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"></solid>
            <corners android:radius="4dp"/>
            <stroke android:width="1dp" android:color="#AAA" />
            <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ccc"/>
                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item
                android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFFFF"></solid>
                    <corners android:radius="4dp" />
                    <stroke android:color="#CCCCCC" android:width="1dp"/>
                    <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp" ></padding>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>