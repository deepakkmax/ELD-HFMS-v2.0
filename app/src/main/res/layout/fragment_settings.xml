                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/ivBluetoothName"
                    app:layout_constraintTop_toBottomOf="@id/tvBluetoothNameLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/setting_view_layout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/ivBTBMacAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:src="@drawable/ic_setting_bluetooth1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBTBMacAddressLabel"
                    style="@style/SettingsLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="Hutch Connect MAC Address"
                    app:layout_constraintStart_toEndOf="@id/ivBTBMacAddress"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBTBMacAddress"
                    style="@style/BigTextLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintStart_toEndOf="@id/ivBTBMacAddress"
                    app:layout_constraintTop_toBottomOf="@id/tvBTBMacAddressLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

