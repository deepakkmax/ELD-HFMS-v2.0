<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >


    <LinearLayout
        android:id="@+id/layoutInformation"
        android:layout_width="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/butEventIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/event_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/off_duty" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="04:25 AM"
                android:textStyle="bold"
                style="@style/EventInformationTextStyle" />
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:text="Example application"
                style="@style/EventInformationTextStyle" />

            <TextView
                android:id="@+id/tvInformation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:text="Odometer:0,EngineHour:0"
                style="@style/EventInformationTextStyle" />

            <TextView
                android:id="@+id/tvInformation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:text="Description"
                style="@style/EventInformationTextStyle" />

            <TextView
                android:id="@+id/tvInformation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:text="Description"
                android:visibility="gone"
                style="@style/EventInformationTextStyle" />

            <TextView
                android:id="@+id/tvInformation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:text="Description"
                android:visibility="gone"
                style="@style/EventInformationTextStyle" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:singleLine="false"
        android:gravity="center"
        android:text="Description"
        android:visibility="gone"
        style="@style/PhoneEventInformationTextStyle.xhdpi" />

</LinearLayout>