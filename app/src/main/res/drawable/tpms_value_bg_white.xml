<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/tpms_border_radius" android:topRightRadius="@dimen/tpms_border_radius"></corners>
            <solid android:color="@color/ccc"></solid>
        </shape>
    </item>
    <item
        android:left="@dimen/tpms_border_width"
        android:top="@dimen/tpms_border_width"
        android:right="@dimen/tpms_border_width"
        android:bottom="@dimen/tpms_border_width_half">
        <shape>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/tpms_border_radius" android:topRightRadius="@dimen/tpms_border_radius"></corners>

            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:centerColor="@color/white"
                android:startColor="@color/f5f5f5"
                android:type="linear"
                android:useLevel="false" />
        </shape>
    </item>
</layer-list>