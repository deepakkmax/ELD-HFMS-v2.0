<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lRow"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/swEventCode"
            style="@style/list_serial_no_new"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/serial_no"
            android:gravity="center"
            android:textOff="D"
            android:textOn="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventDescription"
                android:textStyle="bold"
                style="@style/EventInformationTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authenticated Driver's ELD login activity" />

            <TextView
                android:id="@+id/tvOdometerReading"
                style="@style/EventInformationTextStyle.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fadingEdge="vertical"
                android:overScrollMode="ifContentScrolls"
                android:text="Odometer: 96486464" />

            <TextView
                android:id="@+id/tvLocationDescription"
                style="@style/EventInformationTextStyle.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33443 Kirk avenue, abbostford, BC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:25 AM" />
            <TextView
                android:id="@+id/tvDate"
                style="@style/ListTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Jan 28, 2016" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>