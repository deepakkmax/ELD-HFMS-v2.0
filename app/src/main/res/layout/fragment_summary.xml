<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/GreyLight"
    tools:context="com.hutchsystems.hutchconnect.fragments.GpsSignalFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/summary"
        style="@style/BigTextLabelStyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingCellularConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/cellular_connection"
                    android:visibility="gone"
                    android:layout_weight="1"
                    style="@style/BigTextLabelStyle" />

                <TextView
                    android:id="@+id/tvCellularType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:text="LTE"/>

                <ImageView
                    android:id="@+id/icCellularChecking"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingWiFiConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/wifi_connection"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icWifiChecking"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvHutchConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hutch_connection"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icHutchConnectionChecking"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDownloadConfiguration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/download_configuration"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icDownloadConfiguration"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBluetoothEnable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingBluetoothEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bluetooth_enable_checking"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icBluetoothEnable"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutBluetoothSearching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBluetoothSearching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_searching"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icBluetoothSearching"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBTBEstablishedConnection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvEstablishConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bluetooth_established_connection"
                    android:visibility="gone"
                    android:layout_weight="1"
                    style="@style/BigTextLabelStyle" />

                <TextView
                    android:id="@+id/tvNumberOfTry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icEstablishConnection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBluetoothHearbeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingBTBHeartbeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bluetooth_checking_heartbeat"
                    android:visibility="gone"
                    android:layout_weight="1"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icBTBHearBeat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/ic_flagbar_canbus_disconnect" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvFindingSatellite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/finding_gps_satellite"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icFindingSatellite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_setup_processing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingUTCTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/checking_utc_time"
                    android:visibility="gone"
                    android:layout_weight="1"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icCheckingUTCTime"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_setup_processing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingLatitudeLongitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/checking_latitude_longitude"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icCheckingLatitudeLongitude"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_setup_processing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCheckingLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/checking_current_location"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/BigTextLabelStyle" />

                <ImageView
                    android:id="@+id/icCheckingLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_setup_processing" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
