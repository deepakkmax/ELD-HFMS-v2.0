<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hutchsystems.hutchconnect.fragments.IncidentListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutIncident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical" android:visibility="invisible">

            <ImageButton
                android:id="@+id/btnNoticeAndOrder"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/ic_incident_notice_order" />

            <ImageButton
                android:id="@+id/btnCVSAInspection"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/_2sdp"

                android:src="@drawable/ic_incident_cvsa" />

            <ImageButton
                android:id="@+id/btnViolationTicket"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/_2sdp"

                android:src="@drawable/ic_incident_violation_ticket" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNewIncident"
            style="@style/fab_btn_style_new"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:src="@drawable/add_plus_button" />
    </LinearLayout>

</FrameLayout>
