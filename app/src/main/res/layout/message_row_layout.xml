<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:gravity="center"
        android:background="@drawable/message_date_bg"
        android:text="@string/today"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:textColor="@color/blue2"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/layoutMessage"
        style="@style/message_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/send_message_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMessage"
            style="@style/list_title_text.Send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="Going to fazilka tomorrow.. Going to fazilka tomorrow.. Going to fazilka tomorrow.." />

        <TextView
            android:id="@+id/tvMessageTime"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:gravity="right"
            android:text="04:25 AM" />

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_msg_read"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
