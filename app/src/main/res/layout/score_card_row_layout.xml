<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlertName"
            style="@style/PhoneEventInformationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authenticated Driver's ELD login activity"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScore"
            style="@style/PhoneEventInformationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="vertical"
            android:overScrollMode="ifContentScrolls"
            android:text="Scores: -30" />

        <TextView
            android:id="@+id/tvDuration"
            style="@style/PhoneEventInformationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 04:23 Hrs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            style="@style/ListTopRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:25 AM" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/ListTopRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Jan 28, 2016" />
    </LinearLayout>

</LinearLayout>
