<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_7sdp"
    android:paddingBottom="@dimen/_7sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3.5"
        >

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="May 01, 2020" android:layout_weight="1.5"
            >

        </TextView>


        <TextView
            android:id="@+id/tvDriving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0h 0min"
            android:layout_weight="1"
            >

        </TextView>


        <TextView
            android:id="@+id/tvOnDuty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0h 0min">

        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/ccc"
        app:layout_constraintTop_toBottomOf="@+id/header_rule_layout"></View>


</LinearLayout>
