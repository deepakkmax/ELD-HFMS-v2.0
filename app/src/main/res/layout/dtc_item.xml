<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/layout_bg_round_nine"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvSPNDescription"
            style="@style/list_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="Engine Fuel Filter Differential Pressure" />

        <TextView
            android:id="@+id/tvFMIDescription"
            style="@style/list_subtitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:fadingEdge="vertical"
            android:overScrollMode="ifContentScrolls"
            android:text="Below Normal Operational Range - Moderate" />

        <View
            style="@style/SettingSeprator.MarginLeft0"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView android:id="@+id/tvSPN"
                    style="@style/DTC_list_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="520326" />

                <TextView android:id="@+id/tvSPNText"
                    style="@style/DTC_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spn_mid" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/ccc"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView  android:id="@+id/tvFMI"
                    style="@style/DTC_list_val.green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="024" />

                <TextView
                    style="@style/DTC_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fmi" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/ccc"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOccurence"
                    style="@style/DTC_list_val.red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="345" />

                <TextView
                    style="@style/DTC_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oc" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
