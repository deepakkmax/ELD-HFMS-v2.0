<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:top="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ddd"/>
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="0dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ddd" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item
                android:top="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ddd"/>
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="0dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ddd" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/ccc"/>
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="0dp"
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>