<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp">



        <TextView
            android:id="@+id/tvUniNos"
            style="@style/list_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_type"
            android:layout_marginTop="@dimen/_2sdp"/>



        <TextView
            android:id="@+id/tvPlateNos"
            style="@style/list_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOL" />

        <TextView
            android:id="@+id/tvSerialNos"
            style="@style/list_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="03:35 PM" />




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/ccc"></View>

</LinearLayout>
