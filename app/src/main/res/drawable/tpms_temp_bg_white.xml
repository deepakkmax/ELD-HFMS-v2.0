<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:bottomLeftRadius="@dimen/tpms_border_radius" android:bottomRightRadius="@dimen/tpms_border_radius" android:topLeftRadius="0dp" android:topRightRadius="0dp"></corners>
            <solid android:color="@color/ccc"></solid>
        </shape>
    </item>
    <item
        android:left="@dimen/tpms_border_width"
        android:top="0dp"
        android:right="@dimen/tpms_border_width"
        android:bottom="@dimen/tpms_border_width">
        <shape>
            <corners android:bottomLeftRadius="@dimen/tpms_border_radius" android:bottomRightRadius="@dimen/tpms_border_radius" android:topLeftRadius="0dp" android:topRightRadius="0dp"></corners>
            <gradient
                android:angle="90"
                android:endColor="@color/f5f5f5"
                android:centerColor="@color/white"
                android:startColor="@color/white"
                android:type="linear"
                android:useLevel="false" />
        </shape>
    </item>
</layer-list>